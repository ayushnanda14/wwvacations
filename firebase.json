{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/package/**",
        "destination": "/package/[packageId]/index.html"
      },
      {
        "source": "/packages",
        "destination": "/packages/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
} 